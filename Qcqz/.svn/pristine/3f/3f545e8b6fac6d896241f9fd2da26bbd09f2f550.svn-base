
.login_contain{
    float: left;
    width: 100%;
    height: 100%;

}
.login-top{
    width: 100%;
    margin-top:50px;
    height: 100px;
    font-size: 40px;
    line-height: 150px;
    text-align: center;
    color: white;
    font-family: "华文彩云";
}
.login-div{
    width: 500px;
    height: 280px;
    border: 2px solid #38bff6;
    vertical-align:middle;
    border-radius:15px;
    margin: 0 auto;
    margin-top: 150px;
}
.login-div > .top{
    float: left;
    font-size: 24px;
    width:100%;
    height: 50px;
    text-align: left;
    text-indent: 12px;
    color: white;
    background-image: url("../image/7.jpg");
    background-size: cover;
    border-top-left-radius:15px;
    border-top-right-radius:15px;
    border-bottom: 1px solid #4c8fc3;
    line-height: 50px;
    font-family: "华文彩云";
}
.login-div >.bottom{
    float: left;
    width:100%;
    height: 230px;
    background-image: url("../image/6.jpg");
    background-size: cover;
    border-bottom-left-radius:15px;
    border-bottom-right-radius:15px;
}
.username-div,.pwd-div{
    width: 400px;
    height: 35px;
    margin: 0 auto;
    margin-top: 25px;
    line-height: 35px;
    font-size: 18px;
    font-family: verdana, arial, helvetica, sans-serif;
}
.username-lable-div,.pwd-lable-div{
    float:left;
    width: 100px;
    height: 35px;
    text-align: center;
}
.username-input-div,.pwd-input-div{
    float:left;
    width: 300px;
    height: 35px;
}
.username-input-div>input,.pwd-input-div>input{
    width: 300px;
    height: 35px;
    border: 0px;
    margin: 0px;
    padding: 0px;
    border-radius:5px;
}
.login-button{
    width: 300px;
    height: 40px;
    margin: 0 auto;
    margin-top: 20px;
}
.submit-button{
    width: 79px;
    height: 27px;
    float: left;
    margin-left: 61px;
    margin-top: 5px;
}
.reset-button{
    width: 79px;
    height: 27px;
    float: left;
    margin-left: 40px;
    margin-top: 5px;
}
.submit-button>a>div,.reset-button>a>div{
    width: 100%;
    height: 100%;
    font-size:14px;
    text-align: center;
    line-height: 27px;
    color: #ffffff;
    background-image: url("../image/button.jpg");
}